@model IEnumerable<專題Version1.Models.LoanModels.LoanApplication>

@{
    ViewBag.Title = "MyLoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style {
    <style>
        .content-wrapper {
            position: relative;
            width: 100%;
            padding: 20px;
        }

        .image-container {
            position: relative;
            width: 100%;
            max-width: 1600px; 
            margin: 0 auto; 
            overflow: hidden; 
        }

        .image-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: black; 
            width: 80%;
            background-color: rgba(0, 0, 0, 0);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0);
        }

            .image-text h1 {
                font-size: 36px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .image-text h3 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .image-text a {
                background-color: #28a745;
                color: #fff;
                padding: 12px 24px;
                text-decoration: none;
                border-radius: 50px;
                display: inline-block;
                font-weight: bold;
                transition: background-color 0.3s;
            }

                .image-text a:hover {
                    background-color: #218838;
                }

        .table-container {
            margin-top: 20px;
        }

        .table-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #007bff;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                padding: 0.75rem;
                vertical-align: top;
                border: 1px solid #dee2e6;
                text-align: center;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #007bff;
                background-color: #f8f9fa;
                font-weight: bold;
                color: #007bff;
            }

            .table tbody tr {
                transition: background-color 0.3s;
            }

                .table tbody tr:hover {
                    background-color: rgba(0, 0, 0, 0.075);
                    cursor: pointer;
                }

            .table tbody td {
                background-color: #fff;
            }

        .table-responsive {
            display: block;
            width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .btn-link {
            color: #007bff;
            text-decoration: none;
            background-color: transparent;
            border: none;
            padding: 0;
            font-size: inherit;
            font-weight: inherit;
        }

            .btn-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="image-container">
            <img src="~/assets/images/PLQ22024_1600x350.jpg" class="img-fluid" />
            <div class="image-text">
                <h1>信貸申請到撥款最快10分鐘</h1>
                <h3>信貸手續費限時優惠0元</h3>
                <a href="@Url.Action("OneMinTrial")" class="btn btn-success btn-rounded btn-fw">1分鐘試算</a>
            </div>
        </div>
        <hr />
        <div class="table-container">
            <div class="table-title">我的貸款申請</div>
            @ViewBag.Message
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>貸款申請編號</th>
                                <th>貸款狀態</th>
                                <th>詳細資料</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr onclick="location.href='@Url.Action("LoanDetails", new { id = item.LoanApplicationID })'">
                                    <td>@item.LoanApplicationID</td>
                                    @if (item.LoanStatus == "Confirmed")
                                    {
                                        <td style="color:darkblue">審核已通過</td>
                                    }
                                    else if (item.LoanStatus == "Pending")
                                    {
                                        <td style="color:red ">待審核</td>
                                    }
                                    else if (item.LoanStatus == "Rejected")
                                    {
                                        <td style="color:darkorange ">審核未通過</td>
                                    }
                                    <td><a href="@Url.Action("LoanDetails", new { id = item.LoanApplicationID })" class="btn-link">查看詳情</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>沒有找到貸款申請。</p>
            }
        </div>
    </div>
</div>
